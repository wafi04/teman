{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true, // Tambahan untuk Vite
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node", // Ganti ke bundler untuk Vite
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, // Tambahan untuk impor JSON
    "isolatedModules": true, // Rekomendasi Vite
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
